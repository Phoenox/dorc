@page "/"

<img class="logo" src="images/logo.png"/>

<MudText Typo="Typo.h4">Welcome!</MudText>

<MudText Typo="Typo.body1">
    Jean-Pierre D'Orc bids you welcome in his humble abode.<br>
    As his honored guest, he will gladly assist you in all your tabletop roleplaying needs.
</MudText>

<MudText Typo="Typo.body1">
    <p>
        For your first visit, why don't we <button class="rollbutton" @onclick="RollForBoth">roll some dice</button>?
    </p>
    <p>
        Our Roll: @ourRoll <br>
        Jean-Pierre's Roll: @jeanPierresRoll
    </p>
    
</MudText>


@code
{
    private int? ourRoll = null;
    private int? jeanPierresRoll = null;
    private DiceRoller roller = new DiceRoller();

    private void RollForBoth()
    {
        ourRoll = RollDie();
        jeanPierresRoll = RollDie();
    }

    private int RollDie() => roller.RollDie();
}
